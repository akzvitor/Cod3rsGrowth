<mvc:View controllerName="ui5.coders.controller.CriacaoCompra"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
	xmlns:lf="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" title="Adicionar Nova Compra" titleAlignment="Center" backgroundDesign="List" class="sapUiContentPadding">
        <content>
            <VBox class="sapUiSmallMargin" backgroundDesign="Solid" direction="Row">
                <lf:Form id="formularioNovaCompra"
                    editable="true"
                    width="100%">
                    <lf:toolbar>
                        <OverflowToolbar id="TB1">
                            <Button icon="sap-icon://navigation-left-arrow" press="onNavBack" />
                            <Title id="Title1" text="Dados da Compra"/>
                        </OverflowToolbar>
                    </lf:toolbar>
                    <lf:layout>
                        <lf:ResponsiveGridLayout
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false"
                            emptySpanXL="4"
                            emptySpanL="4"
                            emptySpanM="4"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="2"
                            singleContainerFullSize="false"/>
                    </lf:layout>
                    <lf:formContainers> 
                        <lf:FormContainer >
                            <lf:formElements>
                                <lf:FormElement label="Nome">
                                    <lf:fields>
                                        <Input id="nomeFormInput" width="50%" liveChange="aoPreencherNome" required="true" autocomplete="false"/>
                                    </lf:fields>
                                </lf:FormElement>
                                <lf:FormElement label="E-mail">
                                    <lf:fields>
                                        <Input id="emailFormInput" width="50%" liveChange="aoPreencherEmail" required="true" autocomplete="false" />
                                    </lf:fields>
                                </lf:FormElement>
                            </lf:formElements>
                        </lf:FormContainer>
                        <lf:FormContainer>
                            <lf:formElements>
                                <lf:FormElement label="Telefone">
                                    <lf:fields>
                                        <MaskInput mask="(99)99999-9999" id="telefoneFormInput" width="25%" change="aoPreencherTelefone" required="true" />
                                    </lf:fields>
                                </lf:FormElement>
                                <lf:FormElement label="CPF">
                                    <MaskInput mask="999.999.999-99" id="cpfFormInput" width="25%" change="aoPreencherCpf" required="true" />
                                </lf:FormElement>
                            </lf:formElements>
                        </lf:FormContainer>
                    </lf:formContainers>
                </lf:Form>
            </VBox>
        </content>
        <content>
            <VBox class="sapUiSmallMargin" backgroundDesign="Solid">
                <OverflowToolbar>
                    <Button icon="sap-icon://add-coursebook"/>
                    <Title class="sapUiSmallMargin" text="CatÃ¡logo de Obras" />
                </OverflowToolbar>  
                <OverflowToolbar>
                    <content>
                        <ObjectStatus  id="mensagemErroProdutos" visible="false" text="Selecione ao menos uma obra" state="Error"/>
                    </content>
                    <ToolbarSpacer />
                    <SearchField liveChange=".onSearch" width="25%" search="aoProcurarObra"/>
                </OverflowToolbar>
                <List
                    id="catalogoObras"
                    items="{
                        path: 'restObras>/'
                    }"
                    selectionChange=".onSelectionChange"
                    mode="MultiSelect"
                    growing="true"
                    growingThreshold="50"
                    includeItemInSelection="true"
                    showSeparators="Inner">
                    <infoToolbar>
                        <OverflowToolbar visible="false" id="idInfoToolbar">
                            <Label id="idFilterLabel" />
                        </OverflowToolbar>
                    </infoToolbar>
                    <StandardListItem
                        title="{restObras>titulo}"
                        description="{restObras>autor}"
                        iconDensityAware="false"
                        iconInset="false" />
                </List>
                <Button text="Salvar" icon="sap-icon://save" press="aoClicarNoBotaoSalvar"/>
            </VBox>
        </content>
    </Page>
</mvc:View>