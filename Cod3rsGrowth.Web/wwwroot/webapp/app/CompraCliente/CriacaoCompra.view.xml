<mvc:View controllerName="ui5.coders.app.CompraCliente.CriacaoCompra"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
	xmlns:lf="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page id="paginaCriacaoCompra" showHeader="true" title="{i18n>CriacaoCompra.titulo}" titleAlignment="Center" backgroundDesign="List" class="sapUiContentPadding" >
        <content>
            <OverflowToolbar id="TB1">
                <Button icon="sap-icon://navigation-left-arrow" press="onNavBack" id="botaoNavBack"/>
                <Title id="Title1" text="{i18n>CriacaoCompra.tituloFormulario}"/>
                <ToolbarSpacer />
                <Button text="{i18n>CriacaoCompra.botaoSalvar}" icon="sap-icon://save" press="aoClicarNoBotaoSalvar"/>
            </OverflowToolbar>
            <HBox class="sapUiSmallMargin">
                <VBox class="sapUiLargeMarginEnd">
                    <Label text="{i18n>CriacaoCompra.labelNome}" required="true" />
                    <Input id="nomeFormInput" width="130%" liveChange="aoPreencherNome" required="true" autocomplete="false"/>
                    <Label text="{i18n>CriacaoCompra.labelEmail}" required="true" class="sapUiSmallMarginTop"/>
                    <Input id="emailFormInput" width="130%" liveChange="aoPreencherEmail" required="true" autocomplete="false" />
                </VBox>
                <VBox class="sapUiLargeMarginBegin">
                    <Label text="{i18n>CriacaoCompra.labelCpf}" required="true" />
                    <MaskInput mask="999.999.999-99" id="cpfFormInput" width="75%" change="aoPreencherCpf" required="true" />
                    <Label text="{i18n>CriacaoCompra.labelTelefone}" required="true" class="sapUiSmallMarginTop"/>
                    <MaskInput mask="(99)99999-9999" id="telefoneFormInput" width="75%" change="aoPreencherTelefone" required="true" />
                </VBox>    
            </HBox>
        </content>
        <content>
            <OverflowToolbar class="sapUiLargeMarginTop">
                <Button icon="sap-icon://add-coursebook"/>
                <Title class="sapUiSmallMargin" text="{i18n>CriacaoCompra.tituloCatalogo}" />
            </OverflowToolbar>  
            <OverflowToolbar >
                <content>
                    <ObjectStatus  id="mensagemErroProdutos" visible="false" text="{i18n>CriacaoCompra.mensagemErroProdutos}" state="Error"/>
                </content>
                <ToolbarSpacer />
                <SearchField width="18%" search="aoProcurarObra" placeholder="{i18n>CriacaoCompra.searchFieldPlaceholder}" id="searchFieldCatalogo"/>
            </OverflowToolbar>
            <VBox class="sapUiSmallMargin" backgroundDesign="Solid" >
                <List
                    id="catalogoObras"
                    items="{
                        path: 'restObras>/'
                    }"
                    selectionChange=".onSelectionChange"
                    mode="MultiSelect"
                    growing="true"
                    growingThreshold="50"
                    includeItemInSelection="true"
                    showSeparators="Inner">
                    <infoToolbar>
                        <OverflowToolbar visible="false" id="idInfoToolbar">
                            <Label id="idFilterLabel" />
                        </OverflowToolbar>
                    </infoToolbar>
                    <StandardListItem
                        id="itemCatalogo"
                        title="{restObras>titulo} - R${restObras>valorObra}"
                        description="{restObras>autor}"
                        iconDensityAware="false"
                        iconInset="false" />
                </List>
            </VBox>
        </content>
        <MessageStrip
                id="messageStripSucesso"
				text="{i18n>CriacaoCompra.messageStripSucesso}"
				type="Success"
				showIcon="true"
				showCloseButton="true"
				class="sapUiLargeMarginTop"
                visible="false">
		</MessageStrip>
    </Page>
</mvc:View>