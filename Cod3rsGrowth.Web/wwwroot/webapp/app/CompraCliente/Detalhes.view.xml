<mvc:View controllerName="ui5.coders.app.CompraCliente.Detalhes"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:cards="sap.f.cards"
	xmlns:l="sap.ui.layout"
	xmlns:lf="sap.ui.layout.form">
    <Page title="Detalhes" titleAlignment="Center" binding="{restCompras>/}" navButtonPress="onNavBack" showNavButton="true" backgroundDesign="List" class="sapUiContentPadding">
        <ObjectHeader intro="{restCompras>nome}" title="{restCompras>email}" icon="sap-icon://add-filter" number="R${restCompras>valorCompra}"/>

        <Title id="carouselTitle"
        class="sapUiMediumMarginTop"
        text="10 Matching Results"></Title>
        <Carousel
        id="carouselSample"
        height="auto"
        pages="{
            path: 'restCompras>/'
        }">
        <customLayout>
            <CarouselLayout visiblePagesCount="4"/>
        </customLayout>
        <ScrollContainer
            vertical="false"
            horizontal="false"
            class="sapUiContentPadding">

            <f:Card>
                <f:header>
                    <cards:Header
                        title="{restCompras>nome}"
                        subtitle="{restCompras>email}"
                        iconSrc="{restCompras>email}"
                        iconDisplayShape="Square" />
                </f:header>
                <f:content>
                    <l:VerticalLayout class="sapUiContentPadding" width="100%">
                        <l:BlockLayout>
                            <l:BlockLayoutRow>
                                <l:BlockLayoutCell title="Main Information" width="1">
                                    <HBox class="sapUiTinyMarginBottom">
                                        <Label text="Supplier:" />
                                    </HBox>
                                    <HBox class="sapUiSmallMarginBottom">
                                        <Text text="{nome}" />
                                    </HBox>
                                    <HBox class="sapUiTinyMarginBottom">
                                        <Label text="Main Category:" />
                                    </HBox>
                                    <HBox class="sapUiSmallMarginBottom">
                                        <Text text="{restCompras>nome}" />
                                    </HBox>
                                    <HBox class="sapUiTinyMarginBottom">
                                        <Label text="Category:" />
                                    </HBox>
                                    <HBox class="sapUiSmallMarginBottom">
                                        <Text text="{restCompras>nome}" />
                                    </HBox>
                                </l:BlockLayoutCell>

                                <l:BlockLayoutCell title="Specifications" width="1">
                                    <HBox class="sapUiTinyMarginBottom">
                                        <Label text="Width (cm)" />
                                    </HBox>
                                    <HBox class="sapUiSmallMarginBottom">
                                        <Text text="{restCompras>nome}" />
                                    </HBox>
                                    <HBox class="sapUiTinyMarginBottom">
                                        <Label text="Height (cm)" />
                                    </HBox>
                                    <HBox class="sapUiSmallMarginBottom">
                                        <Text text="{restCompras>nome}" />
                                    </HBox>
                                    <HBox class="sapUiTinyMarginBottom">
                                        <Label text="Weight (kg)" />
                                    </HBox>
                                    <HBox class="sapUiSmallMarginBottom">
                                        <Text text="{restCompras>nome}" />
                                    </HBox>
                                </l:BlockLayoutCell>
                            </l:BlockLayoutRow>
                        </l:BlockLayout>
                    </l:VerticalLayout>
                </f:content>
            </f:Card>
        </ScrollContainer>
    </Carousel>
    </Page>
</mvc:View>