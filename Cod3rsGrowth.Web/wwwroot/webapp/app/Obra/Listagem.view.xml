<mvc:View controllerName="ui5.coders.app.Obra.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Page class="sapUiContentPadding" titleAlignment="Center" backgroundDesign="List">
        <headerContent>
            <Button id="botaoCompras" text="Compras" type="Back" press="aoClicarNoBotaoCompras"/>
            <ToolbarSpacer/>
            <Title text="{i18n>ListagemObra.tituloPagina}"></Title>
            <ToolbarSpacer/>
            <Button id="botaoAdicionarObra" icon="sap-icon://create-form" text="{i18n>ListagemObra.botaoAdicionar}" press="aoClicarNoBotaoAdicionarObra"/>
        </headerContent>
        <content>
            <VBox>
                <Table id="tabelaObras" growing="true" growingThreshold="10" inset="false" width="auto" alternateRowColors="true" items="{
            path: 'restObras>/',
            sorter: {
                path: 'titulo'
            }
        }">
                    <headerToolbar>
                        <OverflowToolbar>
                            <content>
                                <Title text="{i18n>ListagemObra.tituloTabela}" level="H2"/>
                                <ToolbarSpacer />
                                <core:Icon src="sap-icon://add-filter"/>
                                <Input id="tituloFiltroInput" placeholder="{i18n>Obra.Titulo}" width="18%" change="aoAlterarInputFiltro" autocomplete="false"/>
                                <Input id="autorFiltroInput" placeholder="{i18n>Obra.Autor}" width="18%" change="aoAlterarInputFiltro"/>
                                <ComboBox id="formatoFiltroComboBox" items="{restFormatos>/descricoes}" selectionChange="aoAlterarInputFiltro" placeholder="Formato" width="14%">
                                    <core:Item key="{path: 'restFormatos>formato', formatter: '.formatter.formatarFormatoParaFiltro'}" text="{path: 'restFormatos>formato'}"/>
                                </ComboBox>
                                <ComboBox id="statusFiltroComboBox" placeholder="Status" width="14%" selectionChange="aoAlterarInputFiltro">
                                    <core:Item key="true" text="Finalizadas"/>
                                    <core:Item key="false" text="Em lanÃ§amento"/>
                                </ComboBox>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column width="14rem">
                            <Text text="{i18n>Obra.Titulo}" />
                        </Column>
                        <Column hAlign="Center" width="10rem">
                            <Text text="{i18n>Obra.Capitulos}" />
                        </Column>
                        <Column hAlign="Center" width="12rem">
                            <Text text="{i18n>Obra.Formato}" />
                        </Column>
                        <Column hAlign="Center" width="12rem">
                            <Text text="{i18n>Obra.Status}" />
                        </Column>
                        <Column hAlign="Center" width="12rem">
                            <Text text="{i18n>Obra.Autor}" />
                        </Column>
                        <Column hAlign="Center" width="12rem">
                            <Text text="{i18n>Obra.Valor}" />
                        </Column>
                    </columns>
                    <items >
                        <ColumnListItem type="Navigation" press="aoSelecionarObra">
                            <cells>
                                <Text text="{restObras>titulo}" maxLines="1" />
                                <Text text="{restObras>numeroCapitulos}" />
                                <Text text="{
                                    path: 'restObras>formato',
                                    formatter: '.formatter.formatarFormatoParaTabela'
                                }" />
                                <Text text="{
                                    path: 'restObras>foiFinalizada',
                                    formatter: '.formatter.formatarStatus'
                                }" />
                                <Text text="{restObras>autor}" maxLines="1" />
                                <Text text="{
                                    path: 'restObras>valorObra',
                                    formatter: '.formatter.formatarValor'
                                }" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Bar />
            </VBox>
        </content>
    </Page>
</mvc:View>