<mvc:View controllerName="ui5.coders.app.Obra.CriacaoObra"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:lf="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Page id="paginaCriacaoObra" binding="{restCompras>/}" navButtonPress="onNavBack" showHeader="true" title="{i18n>CriacaoObra.titulo}" titleAlignment="Center" showNavButton="true" backgroundDesign="List" class="sapUiContentPadding">
        <headerContent>
            <Button text="{i18n>CriacaoObra.botaoSalvar}" icon="sap-icon://save" press="aoClicarNoBotaoSalvar" id="botaoSalvar"/>
        </headerContent>
        <MessageStrip id="messageStripSucesso" type="Success" showIcon="true" showCloseButton="true" class="sapUiSmallMargin" visible="false">
        </MessageStrip>
        <MessageStrip id="messageStripErro" type="Error" showIcon="true" showCloseButton="true" class="sapUiSmallMargin" visible="false">
        </MessageStrip>
        <content>
            <OverflowToolbar id="TB1">
                <core:Icon src="sap-icon://create-form" color="Tile"/>
                <Title class="sapUiSmallMargin" id="Title1" text="{i18n>CriacaoObra.tituloFormulario}"/>
                <ToolbarSpacer />
            </OverflowToolbar>
            <HBox class="sapUiLargeMargin">
                <VBox class="sapUiLargeMarginEnd">
                    <Label text="{i18n>Obra.Titulo}" required="true" />
                    <Input id="tituloFormInput" value="{restObras>titulo}" width="130%" liveChange="aoPreencherTitulo" required="true" autocomplete="false"/>
                    <Label text="{i18n>Obra.Autor}" required="true" class="sapUiSmallMarginTop"/>
                    <Input id="autorFormInput" value="{restObras>autor}" width="130%" liveChange="aoPreencherAutor" required="true" autocomplete="false" />
                </VBox>
                <VBox class="sapUiLargeMarginBegin">
                    <Label text="{i18n>Obra.Capitulos}" required="true" />
                    <StepInput
                        id="stepInputCapitulos"
                        value="1"
                        min="1"
                        max="20000"
                        width="40%"
                        textAlign="Center"
                        change="aoSelecionarNumeroDeCapitulos"/>
                    <Label text="{i18n>Obra.Formato}" required="true" class="sapUiSmallMarginTop"/>
                    <ComboBox id="formatoComboBox" items="{restFormatos>/descricoes}"
                        selectionChange="aoSelecionarFormato" placeholder="Formato" width="50%">
                        <core:Item key="{path: 'restFormatos>formato', formatter: '.formatter.formatarFormatoParaFiltro'}"
                            text="{path: 'restFormatos>formato'}"/>
                        </ComboBox>
                </VBox>
                <VBox class="sapUiLargeMarginEnd">
                    <Label text="{i18n>Obra.Valor}" required="true" />
                    <StepInput
                    id="stepInputValor"
                    value="0"
                    displayValuePrecision="2"
                    min="0"
                    max="20000"
                    width="auto"
                    textAlign="Center"
                    description="BRL"
                    change="aoSelecionarValor"/>
                    <Label text="{i18n>Obra.Status}" required="true" class="sapUiSmallMarginTop"/>
                    <ComboBox id="statusComboBox" placeholder="Status" width="60%"
                        selectionChange="aoSelecionarStatus">
                        <core:Item key="true" text="Finalizadas"/>
                        <core:Item key="false" text="Em lanÃ§amento"/>
                    </ComboBox>
                </VBox>
                <VBox class="sapUiLargeMarginBegin">
                    <Label text="{i18n>Obra.InicioPubli}" required="true" />
                    <DatePicker id="datePickerFormInput" class="DRS1" change="aoSelecionarData" width="auto" 
                        placeholder="{i18n>Obra.Data}" showFooter="true" />
                    <Label text="{i18n>Obra.Sinopse}" required="true" class="sapUiSmallMarginTop"/>
                    <TextArea value="{restObras>sinopse}" growing="true" growingMaxLines="7" width="50%" 
                        rows="1" placeholder="Sinopse"/>
                </VBox>
            </HBox>
            <HBox class="sapUiSmallMargin">
                <VBox>
                    <Label text="{i18n>Obra.Generos}" required="true" class="sapUiSmallMarginTop"/>
                    <MultiComboBox
			            selectionChange="aoSelecionarGenero"
			            selectionFinish="aoTerminarSelecao"
			            width="100%"
			            items="{
				            path: '/ProductCollection',
				            sorter: { path: 'Name' }
			            }">
			            <core:Item key="{ProductId}" text="{Name}"/>
		            </MultiComboBox>
                </VBox>
            </HBox>
        </content>
