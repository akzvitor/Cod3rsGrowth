<mvc:View controllerName="ui5.coders.CompraCliente.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Table id="tabelaCompras" growing="true" inset="false" width="auto" alternateRowColors="true" mode="SingleSelectLeft" 
        items="{
            path: 'restCompras>/',
            sorter: {
                path: 'nome'
            }
        }">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>Listagem.titulo}" level="H2"/>
                    <ToolbarSpacer />
                    <core:Icon src="sap-icon://add-filter"/>
                    <Input id="nomeFiltroInput" placeholder="Nome" width="18%" change="aoAlterarInputFiltro" autocomplete="false"/>
                    <MaskInput mask="999.999.999-99" id="cpfFiltroInput" placeholder="CPF" width="10%" change="aoAlterarInputFiltro"/>
                    <DateRangeSelection
			            id="dateRangeFiltroInput"
			            class="DRS1"
			            value= "{
				            'type': 'sap.ui.model.type.DateInterval',
				            'formatOptions': {
					        'pattern': 'dd/MM/yyyy'
				            },
				            'parts': [
					            {
						            'type': 'sap.ui.model.type.Date',
						            'path': '/start'
					            },
					            {
						            'type': 'sap.ui.model.type.Date',
						            'path': '/end'
					            }
				            ]
			            }"
			            change="aoAlterarInputFiltro"
                        width="18%"
                        placeholder="Data"
                        showFooter="true"
                        />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="6rem">
                <Text text="{i18n>Listagem.colunaNome}" />
            </Column>
            <Column hAlign="Center" width="12rem">
                <Text text="{i18n>Listagem.colunaCpf}" />
            </Column>
            <Column hAlign="Center" width="12rem">
                <Text text="{i18n>Listagem.colunaEmail}" />
            </Column>
            <Column hAlign="Center" width="12rem">
                <Text text="{i18n>Listagem.colunaTelefone}" />
            </Column>
            <Column hAlign="Center" width="12rem">
                <Text text="{i18n>Listagem.colunaValor}" />
            </Column>
            <Column hAlign="Center" width="12rem">
                <Text text="{i18n>Listagem.colunaData}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{restCompras>nome}" />
                    <Text text="{
                                path: 'restCompras>cpf',
                                formatter: '.formatter.formatarCpf'
                            }" />
                    <Text text="{restCompras>email}" />
                    <Text text="{
                                path: 'restCompras>telefone',
                                formatter: '.formatter.formatarTelefone'
                            }" />
                    <Text text="{
                                path: 'restCompras>valorCompra',
                                formatter: '.formatter.formatarValor'
                            }" />
                    <Text text="{
                                path: 'restCompras>dataCompra',
                                formatter: '.formatter.formatarData'
                            }" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
    <Bar />
    <Button 
        id="botaoAdicionar" icon="sap-icon://create-form" text="Adicionar" press="aoClicarNoBotaoAdicionar" />
</mvc:View>